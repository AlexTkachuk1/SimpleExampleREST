@model IdViewModel

<h2>Введите ID пользователя для получения его никнейма</h2>
<form method="post" asp-controller="User" asp-action="NicknameById">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Id"></label><br />
        <input type="number" asp-for="Id"/>
        <span asp-validation-for="Id"></span>
    </div>
    <div>
        <input type="submit" value="Найти никнейм пользователя с данным Id" />
    </div>
</form> 